local Tab2 = Window:CreateTab("PvP ‚ö°")

Tab2:CreateToggle({
    Name = "Xoay 360 ƒë·ªô (Si√™u t·ªëc)",
    CurrentValue = false,
    Callback = function(Value)
        _G.Xoay = Value
        while _G.Xoay do
            task.wait()
            local hrp = game.Players.LocalPlayer.Character:FindFirstChild("HumanoidRootPart")
            if hrp then
                hrp.CFrame = hrp.CFrame * CFrame.Angles(0, math.rad(50), 0)
            end
        end
    end
})

Tab2:CreateToggle({
    Name = "Spam ƒë√°nh (Li√™n t·ª•c)",
    CurrentValue = false,
    Callback = function(Value)
        _G.Spam = Value
        while _G.Spam do
            task.wait(0.1)
            game:GetService("VirtualUser"):ClickButton1(Vector2.new())
        end
    end
})

Tab2:CreateSlider({
    Name = "Hitbox (Ph·∫°m vi dame)",
    Range = {1,100},
    Increment = 1,
    CurrentValue = 10,
    Callback = function(Value)
        _G.Hitbox = Value
        Rayfield:Notify({
            Title = "Hitbox",
            Content = "Ph·∫°m vi: "..Value,
            Duration = 2
        })
    end
})

------------------------------------------
-- TAB 3: AIMBOT üéØ
------------------------------------------
local Tab3 = Window:CreateTab("Aimbot üéØ")

Tab3:CreateToggle({
    Name = "Aimbot (Theo m·ª•c ti√™u g·∫ßn nh·∫•t)",
    CurrentValue = false,
    Callback = function(Value)
        _G.Aimbot = Value
        while _G.Aimbot do
            task.wait(0.05)
            local cam = workspace.CurrentCamera
            local players = game.Players:GetPlayers()
            local target = nil
            local shortest = math.huge
            for _,p in pairs(players) do
                if p ~= game.Players.LocalPlayer and p.Character and p.Character:FindFirstChild("HumanoidRootPart") then
                    local dist = (cam.CFrame.Position - p.Character.HumanoidRootPart.Position).magnitude
                    if dist < shortest then
                        shortest = dist
                        target = p
                    end
                end
            end
            if target then
                cam.CFrame = CFrame.new(cam.CFrame.Position, target.Character.HumanoidRootPart.Position)
            end
        end
    end
})

------------------------------------------
-- TAB 4: T·ªêC ƒê·ªò üèÉ
