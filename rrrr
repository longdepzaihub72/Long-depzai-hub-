-- N·∫°p th∆∞ vi·ªán Rayfield
local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

-- C·∫•u h√¨nh c·ª≠a s·ªï ch√≠nh
local Window = Rayfield:CreateWindow({
    Name = "Longdepzai | City Lor üå∏",
    LoadingTitle = "ƒêang kh·ªüi ƒë·ªông menu...",
    LoadingSubtitle = "By Longdepzai",
    ConfigurationSaving = {
        Enabled = true,
        FolderName = "LongdepzaiHub",
        FileName = "CityLorHub"
    },
    KeySystem = false
})

-- üåà Vi·ªÅn 7 m√†u xoay li√™n t·ª•c
task.spawn(function()
    local colors = {"#ff0000","#ff7f00","#ffff00","#00ff00","#0000ff","#4b0082","#8f00ff"}
    while task.wait(0.25) do
        for _,v in pairs(colors) do
            Window:SetTheme({
                Background = "#ffffff",
                Topbar = "#ffe6f0",
                Border = v,
                TextColor = "#ff66aa"
            })
            task.wait(0.25)
        end
    end
end)

-- üîò N√∫t m·ªü menu c√≥ ·∫£nh
Rayfield:LoadImage("OpenButton", "https://www.roblox.com/asset/?id=79809536246322")

-- üå∏ Thanh ti√™u ƒë·ªÅ tr√™n c√πng
game.StarterGui:SetCore("ChatMakeSystemMessage", {
    Text = "üå∏ Longdepzai | City Lor Hub ƒë√£ b·∫≠t üå∏",
    Color = Color3.fromRGB(255,150,180)
})

------------------------------------------
-- TAB 1: FRAM BOSS ‚öîÔ∏è
------------------------------------------
local Tab1 = Window:CreateTab("Fram Boss ‚öîÔ∏è")

Tab1:CreateToggle({
    Name = "Fram Boss (T·ª± ƒë·ªông ƒë√°nh boss)",
    CurrentValue = false,
    Callback = function(Value)
        _G.FramBoss = Value
        while _G.FramBoss do
            task.wait()
            local boss = workspace:FindFirstChild("Boss")
            if boss and boss:FindFirstChild("HumanoidRootPart") then
                local plr = game.Players.LocalPlayer
                local hrp = plr.Character and plr.Character:FindFirstChild("HumanoidRootPart")
                if hrp then
                    hrp.CFrame = boss.HumanoidRootPart.CFrame * CFrame.new(0,0,3)
                    -- bay v√≤ng tr√≤n
                    for i=1,3 do
                        hrp.CFrame = hrp.CFrame * CFrame.Angles(0,math.rad(120),0)
                        task.wait(0.1)
                    end
                    game:GetService("VirtualUser"):ClickButton1(Vector2.new())
                end
            end
        end
    end
})

Tab1:CreateDropdown({
    Name = "Ch·ªçn V≈© Kh√≠",
    Options = {"B√° v∆∞∆°ng k√≠ch", "Ph·∫≠t", "B·∫°ch long", "H·∫Øc long", "V√µ ƒëang ki·∫øm ph√°p"},
    CurrentOption = "B√° v∆∞∆°ng k√≠ch",
    Callback = function(Option)
        _G.VuKhi = Option
        Rayfield:Notify({
            Title = "V≈© kh√≠ ƒë√£ ch·ªçn",
            Content = Option,
            Duration = 3
        })
    end
})

Tab1:CreateToggle({
    Name = "Giao h√†ng üì¶ (Auto Delivery)",
    CurrentValue = false,
    Callback = function(Value)
        _G.GiaoHang = Value
        while _G.GiaoHang do
            task.wait(1)
            local hang = workspace:FindFirstChild("Hang")
            local diem = workspace:FindFirstChild("DiemGiao")
            local hrp = game.Players.LocalPlayer.Character:FindFirstChild("HumanoidRootPart")
            if hang and diem and hrp then
                hrp.CFrame = hang.CFrame
                task.wait(1)
                hrp.CFrame = diem.CFrame
            end
        end
    end
})

