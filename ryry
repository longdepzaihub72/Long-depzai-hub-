-- Longdepzai | City Lor Hub
-- UI by Rayfield (Fluent Style)

local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

local Window = Rayfield:CreateWindow({
    Name = "Longdepzai | City Lor",
    LoadingTitle = "ƒêang kh·ªüi ƒë·ªông menu...",
    LoadingSubtitle = "by Longdepzai",
    ConfigurationSaving = {
        Enabled = true,
        FolderName = "LongdepzaiHub",
        FileName = "CityLorHub"
    },
    Discord = {
        Enabled = false
    },
    KeySystem = false
})

-- N√∫t m·ªü menu
Rayfield:LoadImage("OpenButton", "https://www.roblox.com/asset/?id=79809536246322")

-- M√†u s·∫Øc & vi·ªÅn 7 m√†u
task.spawn(function()
    while task.wait() do
        local colors = {"#ff0000","#ff7f00","#ffff00","#00ff00","#0000ff","#4b0082","#8f00ff"}
        for _,v in pairs(colors) do
            Window:SetTheme({ Border = v })
            task.wait(0.25)
        end
    end
end)

-- T·∫°o Tabs
local Tab1 = Window:CreateTab("Fram Boss ‚öîÔ∏è", "rbxassetid://4483345998")
local Tab2 = Window:CreateTab("PvP ‚ö°", "rbxassetid://4483345998")
local Tab3 = Window:CreateTab("Aimbot üéØ", "rbxassetid://4483345998")
local Tab4 = Window:CreateTab("T·ªëc ƒë·ªô üèÉ", "rbxassetid://4483345998")
local Tab5 = Window:CreateTab("Nh·∫£y cao ü¶ò", "rbxassetid://4483345998")
local Tab6 = Window:CreateTab("Dame üí•", "rbxassetid://4483345998")

------------------------------------------
-- TAB 1: FRAM BOSS
------------------------------------------
Tab1:CreateToggle({
    Name = "Fram Boss",
    CurrentValue = false,
    Flag = "FramBoss",
    Callback = function(Value)
        _G.FramBoss = Value
        while _G.FramBoss do
            task.wait()
            -- D·ªãch chuy·ªÉn g·∫ßn boss
            local boss = workspace:FindFirstChild("Boss")
            if boss and boss:FindFirstChild("HumanoidRootPart") and game.Players.LocalPlayer.Character then
                local hrp = game.Players.LocalPlayer.Character:FindFirstChild("HumanoidRootPart")
                hrp.CFrame = boss.HumanoidRootPart.CFrame * CFrame.new(0,0,3)
                -- Bay v√≤ng tr√≤n + ƒë√°nh
                for i=1,3 do
                    hrp.CFrame = hrp.CFrame * CFrame.Angles(0,math.rad(120),0)
                    task.wait(0.1)
                end
                game:GetService("VirtualUser"):ClickButton1(Vector2.new())
            end
        end
    end
})

Tab1:CreateDropdown({
    Name = "Ch·ªçn V≈© Kh√≠",
    Options = {"B√° v∆∞∆°ng k√≠ch", "Ph·∫≠t", "B·∫°ch long", "H·∫Øc long", "V√µ ƒëang ki·∫øm ph√°p"},
    CurrentOption = "B√° v∆∞∆°ng k√≠ch",
    Flag = "WeaponChoice",
    Callback = function(Option)
        _G.VuKhi = Option
        print("ƒê√£ ch·ªçn v≈© kh√≠: " .. Option)
    end
})

Tab1:CreateToggle({
    Name = "Giao h√†ng üì¶",
    CurrentValue = false,
    Flag = "GiaoHang",
    Callback = function(Value)
        _G.GiaoHang = Value
        while _G.GiaoHang do
            task.wait(1)
            local Hang = workspace:FindFirstChild("Hang")
            local DiemGiao = workspace:FindFirstChild("DiemGiao")
            if Hang and DiemGiao and game.Players.LocalPlayer.Character then
                local hrp = game.Players.LocalPlayer.Character:FindFirstChild("HumanoidRootPart")
                hrp.CFrame = Hang.CFrame
                task.wait(1)
                hrp.CFrame = DiemGiao.CFrame
            end
        end
    end
})

------------------------------------------
-- TAB 2: PVP
------------------------------------------
Tab2:CreateToggle({
    Name = "Xoay 360 ƒë·ªô",
    CurrentValue = false,
    Callback = function(Value)
        _G.Xoay = Value
        while _G.Xoay do
            task.wait()
            local hrp = game.Players.LocalPlayer.Character:FindFirstChild("HumanoidRootPart")
            if hrp then
                hrp.CFrame = hrp.CFrame * CFrame.Angles(0, math.rad(50), 0)
            end
        end
    end
})

Tab2:CreateToggle({
    Name = "Spam ƒë√°nh",
    CurrentValue = false,
    Callback = function(Value)
        _G.Spam = Value
        while _G.Spam do
            task.wait(0.1)
            game:GetService("VirtualUser"):ClickButton1(Vector2.new())
        end
    end
})

Tab2:CreateSlider({
    Name = "Hitbox ph·∫°m vi",
    Range = {1, 100},
    Increment = 1,
    CurrentValue = 10,
    Callback = function(Value)
        _G.Hitbox = Value
        print("Ph·∫°m vi Hitbox: "..Value)
    end
})

------------------------------------------
-- TAB 3: AIMBOT
------------------------------------------
Tab3:CreateToggle({
    Name = "Aimbot (Theo ng∆∞·ªùi ch∆°i)",
    CurrentValue = false,
    Callback = function(Value)
        _G.Aimbot = Value
        while _G.Aimbot do
            task.wait()
            -- Gi·∫£ l·∫≠p xoay theo ng∆∞·ªùi g·∫ßn nh·∫•t
            local player = game.Players:GetPlayers()[math.random(1,#game.Players:GetPlayers())]
            if player and player.Character and player.Character:FindFirstChild("HumanoidRootPart") then
                game.Workspace.CurrentCamera.CFrame = CFrame.new(game.Workspace.CurrentCamera.CFrame.Position, player.Character.HumanoidRootPart.Position)
            end
        end
    end
})

------------------------------------------
-- TAB 4: T·ªêC ƒê·ªò
------------------------------------------
Tab4:CreateSlider({
    Name = "T·ªëc ƒë·ªô",
    Range = {1,100},
    Increment = 1,
    CurrentValue = 16,
    Callback = function(Value)
        game.Players.LocalPlayer.Character.Humanoid.WalkSpeed = Value
    end
})

------------------------------------------
-- TAB 5: NH·∫¢Y CAO
------------------------------------------
Tab5:CreateSlider({
    Name = "ƒê·ªô cao nh·∫£y",
    Range = {1,100},
    Increment = 1,
    CurrentValue = 50,
    Callback = function(Value)
        game.Players.LocalPlayer.Character.Humanoid.JumpPower = Value
    end
})

------------------------------------------
-- TAB 6: DAME
------------------------------------------
Tab6:CreateToggle({
    Name = "Hi·ªán dame khi ƒë√°nh",
    CurrentValue = false,
    Callback = function(Value)
        _G.ShowDame = Value
        if Value then
            game.StarterGui:SetCore("ChatMakeSystemMessage", {
                Text = "[Longdepzai Hub] ƒê√£ b·∫≠t hi·ªÉn th·ªã dame!";
                Color = Color3.fromRGB(255, 100, 100)
            })
        end
    end
})