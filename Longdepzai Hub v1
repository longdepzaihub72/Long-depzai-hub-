-- helper to create tab button
local function createTabBtn(text, index)
	local btn = Instance.new("TextButton", TabsRow)
	btn.Size = UDim2.new(1/8, 0, 1, 0)
	btn.Position = UDim2.new((index-1)/8, 0, 0, 0)
	btn.Text = text
	btn.BackgroundColor3 = Color3.fromRGB(255,255,255)
	btn.Font = Enum.Font.GothamBold
	btn.TextSize = 13
	btn.TextColor3 = Color3.fromRGB(20,20,20)
	return btn
end

-- create 8 tabs
local tabNames = {"‚öîÔ∏è PVP","üí• Buff Dame","üì¶ Giao H√†ng","üöÄ Scripts","üå∏ Th√¥ng Tin","üéØ Aimbot","üí® Speed","‚öôÔ∏è Setting"}
local tabs = {}
for i,name in ipairs(tabNames) do tabs[i] = createTabBtn(name, i) end

-- demo state (all UI-only)
local state = {
	spin=false, spam=false,
	buffValue=1,
	delivery=false,
	aimVisual=false,
	speedValue=1,
	setting_shadow=false,
	setting_brightness=false
}

-- Clear content children helper
local function clearContent()
	for _,c in pairs(Content:GetChildren()) do
		if c ~= ContentLabel then pcall(function() c:Destroy() end) end
	end
end

-- Small UI control creators (demo only)
local function makeToggle(initial, onChange)
	local frame = Instance.new("Frame", Content)
	frame.Size = UDim2.new(0, 120, 0, 36)
	frame.BackgroundTransparency = 1
	local btn = Instance.new("TextButton", frame)
	btn.Size = UDim2.new(1,0,1,0); btn.Position = UDim2.new(0,0,0,0)
	btn.BackgroundColor3 = initial and Color3.fromRGB(255,180,210) or Color3.fromRGB(240,240,240)
	btn.Text = initial and "ON" or "OFF"
	btn.Font = Enum.Font.Gotham
	btn.TextSize = 14
	btn.TextColor3 = Color3.fromRGB(20,20,20)
	btn.AutoButtonColor = false
	btn.MouseButton1Click:Connect(function()
		initial = not initial
		btn.BackgroundColor3 = initial and Color3.fromRGB(255,180,210) or Color3.fromRGB(240,240,240)
		btn.Text = initial and "ON" or "OFF"
		onChange(initial)
	end)
	return frame, function() return initial end
end

-- PVP tab (demo)
local function showPVP()
	clearContent()
	ContentLabel.Text = "‚öîÔ∏è PVP (Demo UI)\n\n- Xoay 360¬∞ (demo)\n- Spam ƒë√°nh (demo)\n\nC√°c n√∫t ·ªü ƒë√¢y ch·ªâ m√¥ ph·ªèng tr·∫°ng th√°i, KH√îNG can thi·ªáp gameplay."
	-- spin toggle
	local frame1 = Instance.new("Frame", Content); frame1.Size = UDim2.new(1,0,0,40); frame1.BackgroundTransparency=1; frame1.Position=UDim2.new(0,0,0,0)
	local spinBtn = Instance.new("TextButton", frame1); spinBtn.Size = UDim2.new(0,180,0,36); spinBtn.Position=UDim2.new(0,0,0,2)
	spinBtn.Text = "Xoay 360¬∞: " .. (state.spin and "ON" or "OFF"); spinBtn.Font=Enum.Font.Gotham
	spinBtn.MouseButton1Click:Connect(function()
		state.spin = not state.spin
		spinBtn.Text = "Xoay 360¬∞: " .. (state.spin and "ON" or "OFF")
		ContentLabel.Text = state.spin and "Xoay 360¬∞ ƒë√£ b·∫≠t (Demo)." or "Xoay 360¬∞ ƒë√£ t·∫Øt."
	end)
	-- spam toggle
	local spamBtn = Instance.new("TextButton", frame1); spamBtn.Size=UDim2.new(0,180,0,36); spamBtn.Position=UDim2.new(0,190,0,2)
	spamBtn.Text = "Spam ƒë√°nh: " .. (state.spam and "ON" or "OFF"); spamBtn.Font=Enum.Font.Gotham
	spamBtn.MouseButton1Click:Connect(function()
		state.spam = not state.spam
		spamBtn.Text = "Spam ƒë√°nh: " .. (state.spam and "ON" or "OFF")
		ContentLabel.Text = state.spam and "Spam ƒë√°nh b·∫≠t (Demo)." or "Spam ƒë√°nh t·∫Øt."
	end)
end

-- Buff Dame tab (demo)
local function showBuff()
	clearContent()
	ContentLabel.Text = "üí• Buff Dame (Demo)\nCh·ªânh gi√° tr·ªã (1 - 99). Ch·ªâ hi·ªÉn th·ªã s·ªë."
	local frame = Instance.new("Frame", Content); frame.Size = UDim2.new(1,0,0,64); frame.BackgroundTransparency=1
	local minus = Instance.new("TextButton", frame); minus.Size = UDim2.new(0,48,0,36); minus.Position = UDim2.new(0,0,0,10); minus.Text = "-"
	local plus = Instance.new("TextButton", frame); plus.Size = UDim2.new(0,48,0,36); plus.Position = UDim2.new(0,420,0,10); plus.Text = "+"
	local valLabel = Instance.new("TextLabel", frame); valLabel.Size = UDim2.new(0,200,0,36); valLabel.Position = UDim2.new(0,60,0,10)
	valLabel.BackgroundTransparency = 1; valLabel.Font = Enum.Font.Gotham; valLabel.TextSize = 16
	valLabel.Text = "Buff: x" .. tostring(state.buffValue)
	minus.MouseButton1Click:Connect(function()
		state.buffValue = math.clamp(state.buffValue - 1, 1, 99)
		valLabel.Text = "Buff: x" .. tostring(state.buffValue)
		ContentLabel.Text = "Buff Dame (Demo) set to: " .. tostring(state.buffValue)
	end)
	plus.MouseButton1Click:Connect(function()
		state.buffValue = math.clamp(state.buffValue + 1, 1, 99)
		valLabel.Text = "Buff: x" .. tostring(state.buffValue)
		ContentLabel.Text = "Buff Dame (Demo) set to: " .. tostring(state.buffValue)
	end)
end

