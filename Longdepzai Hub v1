-- Open/close menu
local isOpen = false
OpenButton.MouseButton1Click:Connect(function()
	isOpen = not isOpen
	if isOpen then
		Menu.Visible = true
		TweenService:Create(Menu, TweenInfo.new(0.35, Enum.EasingStyle.Quint, Enum.EasingDirection.Out), {Position = UDim2.new(1, -540, 1, -420)}):Play()
	else
		TweenService:Create(Menu, TweenInfo.new(0.25, Enum.EasingStyle.Quad, Enum.EasingDirection.In), {Position = UDim2.new(1, -540, 1, 100)}):Play()
		task.delay(0.25, function() Menu.Visible = false end)
	end
end)

-- init: select first tab
tabs[1].BackgroundColor3 = Color3.fromRGB(255,230,240)
showPVP()

-- Notification helper (UI-only)
local function Notify(text)
	local n = Instance.new("TextLabel", ScreenGui)
	n.Size = UDim2.new(0,320,0,36); n.Position = UDim2.new(0.5,-160,0,20)
	n.BackgroundColor3 = Color3.fromRGB(0,0,0); n.BackgroundTransparency = 0.2
	n.TextColor3 = Color3.fromRGB(255,255,255); n.Text = text
	n.Font = Enum.Font.GothamBold; n.TextSize = 14; n.BorderSizePixel = 0
	TweenService:Create(n, TweenInfo.new(0.3), {Position=UDim2.new(0.5,-160,0,50)}):Play()
	task.delay(1.6, function()
		TweenService:Create(n, TweenInfo.new(0.25), {Position=UDim2.new(0.5,-160,0,20)}):Play()
		task.delay(0.28, function() pcall(function() n:Destroy() end) end)
	end)
end

Notify("LongDepzai HUB V4 (UI Demo) loaded")
