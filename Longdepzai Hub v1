-- üå∏ LongDepzai HUB V4 (UI Demo TXT Version)
-- An to√†n: ho√†n to√†n l√† UI m√¥ ph·ªèng, KH√îNG can thi·ªáp gameplay, KH√îNG thay ƒë·ªïi lighting/graphics th·∫≠t
-- Ch·∫°y ·ªü LocalScript trong PlayerGui n·∫øu mu·ªën xem trong Roblox Studio, ho·∫∑c gi·ªØ nh∆∞ .txt ƒë·ªÉ d√πng sau

local Players = game:GetService("Players")
local TweenService = game:GetService("TweenService")
local UserInputService = game:GetService("UserInputService")
local player = Players.LocalPlayer

-- ===== ScreenGui =====
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "LongDepzaiHubV4"
ScreenGui.Parent = player:WaitForChild("PlayerGui")
ScreenGui.ResetOnSpawn = false

-- ===== N√∫t m·ªü menu h√¨nh tr√≤n (k√©o ƒë∆∞·ª£c) + vi·ªÅn 7 m√†u =====
local OpenButton = Instance.new("ImageButton")
OpenButton.Name = "OpenMenuButton"
OpenButton.Parent = ScreenGui
OpenButton.Size = UDim2.new(0, 96, 0, 96)
OpenButton.Position = UDim2.new(0.5, -48, 0.5, -48)
OpenButton.AnchorPoint = Vector2.new(0.5, 0.5)
OpenButton.Image = "rbxassetid://79809536246322"
OpenButton.BackgroundColor3 = Color3.fromRGB(255,255,255)
OpenButton.BorderSizePixel = 0
OpenButton.AutoButtonColor = false

local ButtonStroke = Instance.new("UIStroke", OpenButton)
ButtonStroke.Thickness = 4
ButtonStroke.ApplyStrokeMode = Enum.ApplyStrokeMode.Border

task.spawn(function()
	local hue = 0
	while task.wait(0.03) do
		hue = (hue + 0.006) % 1
		ButtonStroke.Color = Color3.fromHSV(hue, 1, 1)
	end
end)

-- draggable behavior for OpenButton
local dragging, dragInput, dragStart, startPos
local function update(input)
	local delta = input.Position - dragStart
	OpenButton.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
end
OpenButton.InputBegan:Connect(function(input)
	if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
		dragging = true
		dragStart = input.Position
		startPos = OpenButton.Position
		input.Changed:Connect(function()
			if input.UserInputState == Enum.UserInputState.End then
				dragging = false
			end
		end)
	end
end)
OpenButton.InputChanged:Connect(function(input)
	if input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch then
		dragInput = input
	end
end)
UserInputService.InputChanged:Connect(function(input)
	if input == dragInput and dragging then update(input) end
end)

