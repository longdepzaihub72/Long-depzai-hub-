-- Aimbot visual (demo only)
local aimFrame = nil
local rays = {}

local function createAimVisual()
	-- remove old if exists
	if aimFrame and aimFrame.Parent then aimFrame:Destroy() end
	aimFrame = Instance.new("Frame", ScreenGui)
	aimFrame.Name = "AimVisual"
	aimFrame.Size = UDim2.new(0,220,0,220)
	aimFrame.Position = UDim2.new(0.5, -110, 0.5, -110)
	aimFrame.AnchorPoint = Vector2.new(0.5,0.5)
	aimFrame.BackgroundTransparency = 1
	local stroke = Instance.new("UIStroke", aimFrame); stroke.Thickness = 4
	task.spawn(function()
		local h=0
		while aimFrame and aimFrame.Parent do
			h = (h + 0.006) % 1
			stroke.Color = Color3.fromHSV(h,1,1)
			task.wait(0.03)
		end
	end)
	-- create rays
	for i=1,8 do
		local r = Instance.new("Frame", aimFrame)
		r.Size = UDim2.new(0,4,0,70)
		r.AnchorPoint = Vector2.new(0.5,0)
		r.Position = UDim2.new(0.5,0,0.5,-35)
		r.Rotation = (i-1) * 45
		r.BackgroundColor3 = Color3.fromRGB(255,255,255)
		r.BorderSizePixel = 0
		r.Visible = false
		table.insert(rays, r)
	end
end

local function showAimbot()
	clearContent()
	ContentLabel.Text = "üéØ Aimbot (Demo Visual Only)\nHi·ªÉn th·ªã v√≤ng tr√≤n 7 m√†u ·ªü gi·ªØa + c√°c ray ch·ªâ h∆∞·ªõng. KH√îNG t·ª± lia / KH√îNG t·ª± kh√≥a m·ª•c ti√™u."
	-- toggle button
	local btn = Instance.new("TextButton", Content); btn.Size = UDim2.new(0,220,0,36); btn.Position=UDim2.new(0,0,0,0)
	btn.Text = state.aimVisual and "T·∫Øt hi·ªáu ·ª©ng Aimbot" or "B·∫≠t hi·ªáu ·ª©ng Aimbot"
	btn.MouseButton1Click:Connect(function()
		state.aimVisual = not state.aimVisual
		btn.Text = state.aimVisual and "T·∫Øt hi·ªáu ·ª©ng Aimbot" or "B·∫≠t hi·ªáu ·ª©ng Aimbot"
		if state.aimVisual then
			if not aimFrame then createAimVisual() end
			aimFrame.Visible = true
			for _,r in pairs(rays) do r.Visible = true end
		else
			if aimFrame then aimFrame.Visible = false end
			for _,r in pairs(rays) do r.Visible = false end
		end
	end)
end

-- Speed tab (demo)
local function showSpeed()
	clearContent()
	ContentLabel.Text = "üí® Speed (Demo)\nCh·ªânh gi√° tr·ªã 1 - 100 (CH·ªà M√î PH·ªéNG)."
	local frame = Instance.new("Frame", Content); frame.Size = UDim2.new(1,0,0,60); frame.BackgroundTransparency = 1
	local minus = Instance.new("TextButton", frame); minus.Size = UDim2.new(0,40,0,36); minus.Position=UDim2.new(0,0,0,12); minus.Text='-'
	local plus = Instance.new("TextButton", frame); plus.Size = UDim2.new(0,40,0,36); plus.Position=UDim2.new(0,420,0,12); plus.Text='+'
	local valLabel = Instance.new("TextLabel", frame); valLabel.Size = UDim2.new(0,200,0,36); valLabel.Position=UDim2.new(0,52,0,12)
	valLabel.BackgroundTransparency = 1; valLabel.Font = Enum.Font.Gotham; valLabel.TextSize = 16
	valLabel.Text = "Speed: " .. tostring(state.speedValue)
	minus.MouseButton1Click:Connect(function()
		state.speedValue = math.clamp(state.speedValue - 1, 1, 100)
		valLabel.Text = "Speed: " .. tostring(state.speedValue)
		ContentLabel.Text = "Speed (Demo) set to: " .. tostring(state.speedValue)
	end)
	plus.MouseButton1Click:Connect(function()
		state.speedValue = math.clamp(state.speedValue + 1, 1, 100)
		valLabel.Text = "Speed: " .. tostring(state.speedValue)
		ContentLabel.Text = "Speed (Demo) set to: " .. tostring(state.speedValue)
	end)
end

-- Setting tab (demo - visual only)
-- "B·∫≠t/T·∫Øt B√≥ng" => t·∫°o/hu·ª∑ Frame gi·∫£ l·∫≠p shadow overlay (UI-only)
-- "Th√™m ƒê·ªô S√°ng" => tƒÉng ƒë·ªô s√°ng visual c·ªßa menu (UI-only)
local shadowOverlay = nil
local function enableShadow(on)
	if on then
		if not shadowOverlay then
			shadowOverlay = Instance.new("Frame", Menu)
			shadowOverlay.Name = "ShadowOverlay"
			shadowOverlay.Size = UDim2.new(1,0,1,0)
			shadowOverlay.Position = UDim2.new(0,0,0,0)
			shadowOverlay.BackgroundColor3 = Color3.fromRGB(0,0,0)
			shadowOverlay.BackgroundTransparency = 0.9 -- light effect; purely UI
			shadowOverlay.ZIndex = Menu.ZIndex - 1
		end
		shadowOverlay.Visible = true
	else
		if shadowOverlay then shadowOverlay.Visible = false end
	end
end

local function setMenuBrightness(on)
	if on then
		Menu.BackgroundColor3 = Color3.fromRGB(255,255,255)
		TitleBar.BackgroundColor3 = Color3.fromRGB(255,245,250)
		ContentLabel.Text = "‚ú® ƒê·ªô s√°ng UI tƒÉng (Demo)."
	else
		Menu.BackgroundColor3 = Color3.fromRGB(255,250,254)
		TitleBar.BackgroundColor3 = Color3.fromRGB(255,230,240)
		ContentLabel.Text = "üîÖ ƒê·ªô s√°ng UI b√¨nh th∆∞·ªùng (Demo)."
	end
end

local function showSetting()
	clearContent()
	ContentLabel.Text = "‚öôÔ∏è Setting (Demo)\nC√°c ch·ª©c nƒÉng ch·ªâ m√¥ ph·ªèng UI: B·∫≠t/T·∫Øt B√≥ng v√† Th√™m ƒê·ªô S√°ng."
	-- shadow toggle
	local shadowBtn = Instance.new("TextButton", Content); shadowBtn.Size = UDim2.new(0,200,0,36); shadowBtn.Position=UDim2.new(0,0,0,0)
	shadowBtn.Text = state.setting_shadow and "B√≥ng: ON" or "B√≥ng: OFF"
	shadowBtn.MouseButton1Click:Connect(function()
		state.setting_shadow = not state.setting_shadow
		shadowBtn.Text = state.setting_shadow and "B√≥ng: ON" or "B√≥ng: OFF"
		enableShadow(state.setting_shadow)
		ContentLabel.Text = state.setting_shadow and "B√≥ng (shader) ƒë√£ b·∫≠t (Demo)." or "B√≥ng ƒë√£ t·∫Øt (Demo)."
	end)
	-- brightness toggle
	local brightBtn = Instance.new("TextButton", Content); brightBtn.Size = UDim2.new(0,200,0,36); brightBtn.Position=UDim2.new(0,210,0,0)
	brightBtn.Text = state.setting_brightness and "S√°ng: ON" or "S√°ng: OFF"
	brightBtn.MouseButton1Click:Connect(function()
		state.setting_brightness = not state.setting_brightness
		brightBtn.Text = state.setting_brightness and "S√°ng: ON" or "S√°ng: OFF"
		setMenuBrightness(state.setting_brightness)
	end)
end

