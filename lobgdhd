OpenButton.Active = true

-- G·ªçi th∆∞ vi·ªán Rayfield UI (Fluent Style)
local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

local Window = Rayfield:CreateWindow({
    Name = "LongDepzai HUB | CityLor2",
    LoadingTitle = "Tiktok : LongDepzaiHub",
    LoadingSubtitle = "Flower LongDepzaiHub",
    ConfigurationSaving = {
       Enabled = false
    },
    Discord = {
       Enabled = false
    },
    KeySystem = false,
})

-------------------------------------------------
-- üå∏ TAB 1: PVP
-------------------------------------------------
local PVP = Window:CreateTab("‚öîÔ∏è PVP")

local spinToggle = PVP:CreateToggle({
   Name = "Xoay 360 ƒë·ªô",
   CurrentValue = false,
   Flag = "Spin",
   Callback = function(Value)
      if Value then
         local plr = game.Players.LocalPlayer
         local chr = plr.Character or plr.CharacterAdded:Wait()
         task.spawn(function()
            while Value and task.wait() do
               chr:SetPrimaryPartCFrame(chr.PrimaryPart.CFrame * CFrame.Angles(0, math.rad(66), 0))
            end
         end)
      end
   end
})

local spamHit = PVP:CreateToggle({
   Name = "Spam ƒë√°nh",
   CurrentValue = false,
   Flag = "SpamHit",
   Callback = function(Value)
      if Value then
         task.spawn(function()
            while Value and task.wait(0.1) do
               game:GetService("ReplicatedStorage"):FireServer("Attack")
            end
         end)
      end
   end
})

-------------------------------------------------
-- üêâ TAB 2: Farm Boss
-------------------------------------------------
local Boss = Window:CreateTab("üêâ Farm Boss")

local framBoss = Boss:CreateToggle({
   Name = "Farm Boss",
   CurrentValue = false,
   Flag = "FarmBoss",
   Callback = function(Value)
      if Value then
         local plr = game.Players.LocalPlayer
         local chr = plr.Character or plr.CharacterAdded:Wait()
         local boss = workspace:FindFirstChild("Boss")
         if boss then
            task.spawn(function()
               while Value and boss and boss:FindFirstChild("HumanoidRootPart") do
                  chr:PivotTo(boss.HumanoidRootPart.CFrame * CFrame.new(0,3,0) * CFrame.Angles(math.rad(90),0,0))
                  game:GetService("ReplicatedStorage"):FireServer("Attack")
                  task.wait(0.1)
               end
            end)
         end
      end
   end
})

local bossHealth = Boss:CreateLabel("Thanh m√°u Boss: 5000 HP")

-------------------------------------------------
-- üì¶ TAB 3: Giao H√†ng
-------------------------------------------------
local Delivery = Window:CreateTab("üì¶ Giao H√†ng")

local delivery = Delivery:CreateToggle({
   Name = "Giao h√†ng",
   CurrentValue = false,
   Flag = "AutoDelivery",
   Callback = function(Value)
      if Value then
         task.spawn(function()
            while Value do
               local plr = game.Players.LocalPlayer
               local chr = plr.Character or plr.CharacterAdded:Wait()
               -- v√≠ d·ª• gi·∫£ l·∫≠p d·ªãch chuy·ªÉn
               chr:PivotTo(workspace:FindFirstChild("Pickup") and workspace.Pickup.CFrame or CFrame.new())
               task.wait(1)
               chr:PivotTo(workspace:FindFirstChild("Dropoff") and workspace.Dropoff.CFrame or CFrame.new())
               task.wait(1)
            end
         end)
      end
   end
})

-------------------------------------------------
-- üöÄ TAB 4: Scripts
-------------------------------------------------
local ScriptTab = Window:CreateTab("üöÄ Scripts")

local fly = ScriptTab:CreateButton({
   Name = "Bay",
   Callback = function()
      loadstring(game:HttpGet("https://raw.githubusercontent.com/XNEOFF/FlyGuiV3/main/FlyGuiV3.txt"))()
   end
})

