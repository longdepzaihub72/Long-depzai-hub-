-- T·∫°o c√°c n√∫t PvP
local function createToggle(name, parent)
    local btn = Instance.new("TextButton", parent)
    btn.Size = UDim2.new(0.9, 0, 0, 35)
    btn.Position = UDim2.new(0.05, 0, 0, (#parent:GetChildren()-1)*40)
    btn.BackgroundColor3 = Color3.fromRGB(150, 0, 0)
    btn.TextColor3 = Color3.new(1,1,1)
    btn.Font = Enum.Font.Gotham
    btn.TextSize = 16
    btn.Text = name.." [OFF]"
    local active = false
    btn.MouseButton1Click:Connect(function()
        active = not active
        btn.Text = name .. (active and " [ON]" or " [OFF]")
    end)
end

createToggle("Xoay 360 ƒë·ªô", tab1Content)
createToggle("Ch·ªçn v≈© kh√≠", tab1Content)
createToggle("Hitbox 7 m√†u", tab1Content)
createToggle("Spam ƒë√°nh", tab1Content)

-- Tab Fram Lv
local framBtn = Instance.new("TextButton", tab2Content)
framBtn.Size = UDim2.new(0.9, 0, 0, 35)
framBtn.Position = UDim2.new(0.05, 0, 0, 10)
framBtn.BackgroundColor3 = Color3.fromRGB(150, 0, 0)
framBtn.TextColor3 = Color3.new(1,1,1)
framBtn.Font = Enum.Font.Gotham
framBtn.TextSize = 16
framBtn.Text = "Fram Lv [OFF]"
local activeFram = false
framBtn.MouseButton1Click:Connect(function()
    activeFram = not activeFram
    framBtn.Text = "Fram Lv " .. (activeFram and "[ON]" or "[OFF]")
end)

-- Chuy·ªÉn tab
tab1Btn.MouseButton1Click:Connect(function()
    tab1Content.Visible = true
    tab2Content.Visible = false
end)
tab2Btn.MouseButton1Click:Connect(function()
    tab1Content.Visible = false
    tab2Content.Visible = true
end)

-- S·ª± ki·ªán m·ªü / ƒë√≥ng menu
openBtn.MouseButton1Click:Connect(function()
    main.Visible = not main.Visible
end)

closeBtn.MouseButton1Click:Connect(function()
    main.Visible = false
end)